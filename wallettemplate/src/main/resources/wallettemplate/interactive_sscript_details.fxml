<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.effect.BoxBlur?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" styleClass="root-pane"
            fx:controller="wallettemplate.InteractiveScriptStateController"
            maxHeight="Infinity" maxWidth="Infinity" prefHeight="600.0">
    <ImageView fitHeight="243.0" fitWidth="243.0" opacity="0.28" pickOnBounds="true" preserveRatio="true"
               AnchorPane.bottomAnchor="-36.0" AnchorPane.rightAnchor="-34.0">
        <effect>
            <ColorAdjust>
                <input>
                    <BoxBlur height="20.0" width="20.0"/>
                </input>
            </ColorAdjust>
        </effect>

        <Image url="@bitcoin_logo_plain.png"/>
    </ImageView>

    <Label layoutX="14.0" layoutY="14.0" text="Script Debugger">
        <font>
            <Font name="System Bold" size="25.0" />
        </font>
    </Label>

    <Label layoutX="14.0" layoutY="100.0" AnchorPane.leftAnchor="20" text="Output Transaction ID">
        <font>
            <Font name="System" size="15.0" />
        </font>
    </Label>

    <Label layoutX="14.0" layoutY="240.0" AnchorPane.leftAnchor="20" text="Input Transaction ID">
        <font>
            <Font name="System" size="15.0" />
        </font>
    </Label>

    <StackPane layoutX="25.0" layoutY="60.0" prefHeight="100.0" prefWidth="572.0"
               style="-fx-border-color: lightgrey"
               AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
        <TextField fx:id="scriptPub" maxWidth="250" AnchorPane.bottomAnchor="10"/>
    </StackPane>

    <StackPane layoutX="25.0" layoutY="60.0" prefHeight="100.0" prefWidth="572.0"
               style="-fx-border-color: lightgrey"
               AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="200">
        <TextField fx:id="scriptSig" maxWidth="250"/>
    </StackPane>

    <Button fx:id="debugBtn" mnemonicParsing="false" onAction="#debugClicked" prefWidth="100.0" layoutX="320"
            layoutY="320" style="-fx-background-color: lightgrey;" styleClass="fat-button" AnchorPane.leftAnchor="20"
            text="Debug"/>

    <StackPane layoutX="25.0" layoutY="60.0"
               style="-fx-border-color: lightgrey" AnchorPane.topAnchor="400"
               AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
        <Label  text="Results:"  />
        <Label layoutX="14.0" layoutY="200.0" fx:id="results"/>
    </StackPane>

    <effect>
        <DropShadow/>
    </effect>
</AnchorPane>
